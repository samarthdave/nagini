<div class="container mt-5">
    <div class="row">
        <div class="col"></div>
        <div class="col-sm-7 col-md-6 col-lg-5 ">
            <div class="card shadow border-0">
                <div class="card-body">
                    <h1 class="text-center">Sign Up</h1>
                    <p>
                        <small class="text-muted">Fields marked * are required.</small>
                    </p>
                    <form class="needs-validation" action="#">
                        <div class="form-group">
                            <label for="">Name*</label>
                            <input type="text" name="fullName" class="form-control" id="fullName" placeholder="John Smith" />
                            <div class="invalid-feedback">
                                Please enter your name.
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-file">
                                <input type="file" name="image" accept="image/*" class="custom-file-input" id="image" />
                                <label class="custom-file-label" for="inputGroupFile01">Avatar</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="">Email*</label>
                            <input type="text" name="email" class="form-control" id="email" placeholder="john@smith.com" />
                            <div class="invalid-feedback">
                                Please provide an email.
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="">Phone</label>
                            <input type="text" name="phone" class="form-control" placeholder="123-456-6789" />
                        </div>
                        <div class="form-group">
                            <label for="">Username*</label>
                            <input type="text" name="username" class="form-control" />
                            <div class="invalid-feedback">
                                Please choose a username.
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="">Password*</label>
                            <input type="password" name="password" class="form-control" />
                            <div class="invalid-feedback">
                                Please enter a password.
                            </div>
                        </div>
                        <button type="submit" class="btn btn-danger btn-block">Sign Up</button>
                    </form>
                    <div class="mt-2 text-center">
                        Have an account?
                        <a href="<%= yelpcamp.loginPath %>">Login</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col"> </div>
    </div>
</div>